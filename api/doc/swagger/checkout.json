            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        },
        "tags": [
          "Checkout"
        ],
        "description": "Retrieves a checkout by its ID",
        "summary": "Get checkout by ID"
      }
